{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/landing/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    }
  ],
  "subPackages": [
    {
      "root": "modules/resource-pages",
      "pages": [
        {
          "path": "resource-detail-page",
          "style": {
            "navigationBarTitleText": "详情"
          }
        },
        {
          "path": "order-list-page",
          "style": {
            "navigationBarTitleText": "我的报名"
          }
        }
      ]
    },
    {
      "root": "modules/info-pages",
      "pages": [
        {
          "path": "edit-info-page",
          "style": {
            "navigationBarTitleText": "详情"
          }
        }
      ]
    },
    {
      "root": "modules/setting-pages",
      "pages": [
        {
          "path": "login-page",
          "style": {
            "navigationBarTitleText": "登录"
          }
        }
      ]
    }
  ],
  // 在此可修改tabbar图标及文字
  "tabBar": {
    "color": "#98A2B3",
    "selectedColor": "#1d2939",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/landing/index",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-selected.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/mine/index",
        "iconPath": "static/tabbar/mine.png",
        "selectedIconPath": "static/tabbar/mine-selected.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationStyle": "custom"
  }
}
